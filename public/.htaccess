RewriteEngine On

# Force HTTPS and remove www (unconditional – applies to all requests)
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteRule ^ https://simea.dentk.com%{REQUEST_URI} [L,R=301,NE]

# Front-controller / SPA routing – only for non-existing files/directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]

# Default index file
DirectoryIndex index.html